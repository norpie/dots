#!/usr/bin/env bash

if [[ -f ~/.cache/ip.txt ]]; then
        updatecheck=$(cat ~/.cache/ip.txt | awk 'NR==2')
fi

date=$(date +%d%m%Y)

if [[ $date = $updatecheck ]]; then
        ip=$(cat ~/.cache/ip.txt | awk 'NR==1')
        echo $ip
        exit 0
fi

ip=$(curl "ifconfig.me" -s)

echo $ip > ~/.cache/ip.txt
echo $date >> ~/.cache/ip.txt
echo $ip
