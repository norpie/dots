#!/usr/bin/env zsh

usage() { echo "Usage: $0 [-p] <file>" 1>&2; exit 1; }

should_clipboard=0

while getopts ":c" o; do
    case "${o}" in
        c)
            should_clipboard=1
            ;;
        *)
            usage
            ;;
    esac
done
shift $((OPTIND-1))

[[ $# -eq 0 ]] && usage

# Convert to absolute path properly
if [[ "$1" = /* ]]; then
    # Already absolute path
    path="$1"
else
    # Relative path - resolve it
    path="$(realpath "$1")"
fi

if [[ $should_clipboard -eq 1 ]]; then
    echo $path | /run/current-system/sw/bin/wl-copy
    /run/current-system/sw/bin/notify-send "Copied $path to clipboard"
fi

echo $path
