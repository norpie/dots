#!/usr/bin/env bash

# Array of files to exclude
exclude=(
  "**/.*"
  "**/node_modules/*"
  "**/__pycache__/*"
  "**/target/*"
  "**/bin/*"
  "**/build/*"
  "**/bins/*"
  "**/obj/*"
  "**/dist/*"
  "**/*.db/*"
  "**/*.lock"
)

function generate_find_exclude {
  local exclude=()
  for i in $@; do
    exclude+=(-not -wholename $i)
  done
  echo $exclude
}

#cd $(git root)
wc -l $(find -type f $(generate_find_exclude $exclude))
